{
  "verbose": true,
  "watch": [
    ".",
    "server.js",
    "routes/*",
    "controllers/*",
    "models/*",
    "middlewares/*",
    "config/*"
  ],
  "ignore": [
    ".git",
    "node_modules/**/node_modules",
    "dist",
    "*.test.js",
    "docs/*"
  ],
  "ext": "js,json,env",
  "delay": "0",
  "execMap": {
    "js": "node"
  },
  "env": {
    "NODE_ENV": "development"
  },
  "legacy-watch": false
} 